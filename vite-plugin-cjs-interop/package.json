{
	"name": "vite-plugin-cjs-interop",
	"version": "1.0.0",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepack": "rm -rf dist && pnpm build",
		"test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
		"test:unit": "vitest run",
		"test:typecheck": "tsc -p tsconfig.json --noEmit",
		"test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
		"test:package": "publint --strict"
	},
	"description": "Vite plugin to unwrap default imports from CJS dependencies during SSR",
	"license": "MIT",
	"repository": "https://github.com/cyco130/vite-plugin-cjs-interop",
	"keywords": [
		"vite-plugin",
		"cjs",
		"interop",
		"ssr"
	],
	"devDependencies": {
		"@cyco130/eslint-config": "^3.4.0",
		"@types/minimatch": "^5.1.2",
		"@types/node": "^20.6.5",
		"eslint": "^8.50.0",
		"publint": "^0.2.2",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.5"
	},
	"dependencies": {
		"acorn": "^8.10.0",
		"estree-walker": "^3.0.3",
		"magic-string": "^0.30.3",
		"minimatch": "^9.0.3"
	}
}
